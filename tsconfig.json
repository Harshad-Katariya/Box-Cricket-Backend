{
   "compilerOptions": {
      "outDir": "./build",
      "rootDir": "./src",
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "resolveJsonModule": false,
      "types": [
         "node"
      ]
   },
   "forceConsistentCasingInFileNames": true,
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules"
   ]
}